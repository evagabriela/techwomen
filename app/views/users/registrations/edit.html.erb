<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

    <div><%= f.email_field :email, placeholder: "Email", :autofocus => true %></div> <br>

  <div>
  <%= f.text_field :username, placeholder: "Username"%></div> <br>

  <div>
  <%= f.text_field :location, placeholder: "City"  %></div><br>

  <div>
  <%= f.text_field :company, placeholder: "Company" %></div><br>

  <div>
  <%= f.text_field :job_title, placeholder: "Job Title" %></div><br>

  <div>
  <%= f.text_field :technologies, placeholder: "Technologies i.e. Ruby, Java, Python...." %></div><br>

  <div>
  <%= f.text_area :blerb, placeholder: "Tell us about yourself..."  %></div><br>

  <h4>Social Networks</h4>
  <div>
  <%= f.url_field :facebook, placeholder: "Facebook" %></div><br>

  <div>
  <%= f.url_field :linkedin, placeholder: "LinkedIn"%></div><br>

  <div>
  <%= f.url_field :blog, placeholder: "Blog" %></div><br>

  <div>
  <%= f.url_field :github, placeholder: "Github"  %></div><br>

  <div>
  <%= f.url_field :personal_site, placeholder: "Personal Site" %></div><br>

  <div>
  <%= f.url_field :other_site, placeholder: "Other Site" %></div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div>
  <%= f.password_field :password, placeholder: "Password (leave blank if you don't want to change it)"  %></div><br>

  <div>
  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %></div><br>

  <div>
  <%= f.password_field :current_password, placeholder: "Current Password (we need your current password to confirm your changes)" %></div>

  <div><%= f.submit "Update" %></div>
<% end %>


<p><%= button_to "Delete My Account", registration_path(resource_name), :data => { :confirm => "Are you sure you want to delete your account?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
